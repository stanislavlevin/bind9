function assert_str_equal () {
    test "$1" = "$2" ||
        { printf 'Actual: "%s" is not equal to expected: "%s"\n' "$1" "$2"
          exit 1
          }
}

function assert_str_in () {
    grep -q -- "$1" <<< "$2" ||
        { printf 'String: "%s" was not found in: "%s"\n' "$1" "$2"
          exit 1
          }
}

function assert_str_not_in () {
    grep -q -v -- "$1" <<< "$2" ||
        { printf 'String: "%s" was found in: "%s"\n' "$1" "$2"
          exit 1
          }
}
